pipeline { 
  
   agent any
   tools {nodejs "nodejs"}
   stages {
   
     stage('Install Dependencies') { 
        steps { 
            sh "npm install -g yarn"
            sh 'echo "p1 install"'
            sh 'ls'
            sh 'cd apps'
            sh 'cd p1'
            sh 'ls'
            sh 'yarn install'
            sh 'yarn build'
         }
      }
     
     stage('Test') { 
        steps { 
            sh 'echo "p1 testing application..."'
        }
      }

      stage("Deploy application") { 
         steps { 
            sh 'echo "p1 deploying application..."'
         }
      }
   }
}